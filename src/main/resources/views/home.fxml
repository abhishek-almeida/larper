<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane maxHeight="480.0" maxWidth="640.0" minHeight="200.0" minWidth="640.0" prefHeight="200.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="based.larper.HomeController">
   <bottom>
      <HBox alignment="CENTER" prefHeight="77.0" prefWidth="640.0" spacing="20.0" style="-fx-background-color: #dddddd;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnPlay" mnemonicParsing="false" onAction="#playMusic" text="Play" />
            <Button fx:id="btnExportMIDI" mnemonicParsing="false" onAction="#exportMIDI" text="Export MIDI" />
            <TextField fx:id="txtExport" />
         </children>
      </HBox>
   </bottom>
   <center>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="txtOrder" />
            <Button fx:id="btnOrder" mnemonicParsing="false" onAction="#setOrder" text="Set order" />
            <TextField fx:id="txtLength" />
            <Button fx:id="btnLength" mnemonicParsing="false" onAction="#setLength" text="Set track length" />
         </children>
      </HBox>
   </center>
   <top>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="640.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnPick" mnemonicParsing="false" onAction="#pickFile" text="Pick file" />
            <Label fx:id="lblFile" />
         </children>
      </HBox>
   </top>
</BorderPane>
